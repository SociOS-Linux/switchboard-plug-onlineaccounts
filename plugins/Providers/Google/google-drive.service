<?xml version="1.0" encoding="UTF-8"?>
<service id="service">
  <type>documents</type>
  <name>Google Drive</name>
  <icon>system-file-manager</icon>
  <description>Sync your files</description>
  <provider>google</provider>
  <translations>pantheon-online-accounts</translations>

  
  <template>
    <group name="auth">
      <group name="oauth2">
        <group name="user_agent">
          <setting type="as" name="Scope">["https://docs.google.com/feeds/"]</setting>
        </group>
      </group>

      <group name="google">
        <group name="ClientLogin">
          <setting name="Service">writely</setting>
          <setting name="Source">Ubuntu-documents-1.0</setting>
        </group>
      </group>
    </group>
  </template>

</service>